<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#283593"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/h_gd_50"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gd_50"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".5"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gd_80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".80"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_gd_35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".35"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_gd_38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".38"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_gd_62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".62"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_gd_66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".66"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gd_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".3"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gd_5"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".05"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gd_35"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".35"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_gd_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".10"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_gd_90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".90"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gd_90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".90"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gd_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".60"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/students"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/h_gd_30"
        app:layout_constraintEnd_toStartOf="@+id/v_gd_90"
        app:layout_constraintStart_toStartOf="@+id/v_gd_10"
        app:layout_constraintTop_toBottomOf="@+id/h_gd_5" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="#37D10D"
        app:layout_constraintEnd_toStartOf="@id/v_gd_35"
        app:layout_constraintBottom_toTopOf="@+id/h_gd_60"
        app:layout_constraintStart_toStartOf="@id/v_gd_10"
        app:layout_constraintTop_toBottomOf="@+id/h_gd_35">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:orientation="vertical" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="7dp"
            android:src="@drawable/baseline_calendar_today_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text=" Mark Attendance"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="#F9A825"
        app:layout_constraintEnd_toStartOf="@id/v_gd_62"
        app:layout_constraintBottom_toTopOf="@+id/h_gd_60"
        app:layout_constraintStart_toStartOf="@+id/v_gd_38"
        app:layout_constraintTop_toBottomOf="@+id/h_gd_35"
        app:layout_constraintVertical_bias="0.0">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="7dp"
            android:src="@drawable/baseline_remove_red_eye_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text=" Show Attendance"
            android:textColor="@color/black"
            android:textSize="18sp" />


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="#ED08C7"
        app:layout_constraintEnd_toStartOf="@id/v_gd_90"
        app:layout_constraintBottom_toTopOf="@+id/h_gd_60"
        app:layout_constraintStart_toEndOf="@id/v_gd_66"
        app:layout_constraintTop_toBottomOf="@+id/h_gd_35"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="7dp"
            android:src="@drawable/baseline_menu_book_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text=" Homework"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/gallery"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#E8E1E1"
        app:layout_constraintBottom_toTopOf="@+id/h_gd_80"
        app:layout_constraintEnd_toStartOf="@id/v_gd_38"
        app:layout_constraintStart_toEndOf="@id/v_gd_10"
        app:layout_constraintTop_toBottomOf="@id/h_gd_50">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:text="Gallery"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal|right"
            android:layout_marginTop="18dp"
            android:src="@drawable/baseline_menu_book_24" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/notice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#E8E1E1"
        app:layout_constraintBottom_toTopOf="@+id/h_gd_80"
        app:layout_constraintEnd_toStartOf="@id/v_gd_90"
        app:layout_constraintStart_toEndOf="@id/v_gd_62"
        app:layout_constraintTop_toBottomOf="@id/h_gd_50">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:text="Notice"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal|right"
            android:layout_marginTop="18dp"
            android:src="@drawable/baseline_message_24" />

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/fee"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="#E8E1E1"
        app:layout_constraintBottom_toTopOf="@id/h_gd_90"
        app:layout_constraintEnd_toStartOf="@id/v_gd_38"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/v_gd_10"
        app:layout_constraintTop_toBottomOf="@+id/h_gd_80">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:text="Pay Fee"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal|right"
            android:layout_marginTop="15dp"
            android:src="@drawable/baseline_attach_money_24" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/about"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="#E8E1E1"
        app:layout_constraintBottom_toTopOf="@+id/h_gd_90"
        app:layout_constraintEnd_toStartOf="@id/v_gd_90"
        app:layout_constraintStart_toEndOf="@id/v_gd_62"
        app:layout_constraintTop_toBottomOf="@id/h_gd_80">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:text="About"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal|right"
            android:layout_marginTop="18dp"
            android:src="@drawable/baseline_perm_phone_msg_24" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>